<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageview_item_exp_icon"
                android:layout_width="@dimen/large_item_exp_detail"
                android:layout_height="@dimen/large_item_exp_detail"
                android:src="@drawable/icon_20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_item_exp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Example"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="@dimen/text_name_cata_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_item_exp_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="20,000 VND"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/text_money_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_contain_any_in_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_exp_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center_horizontal"
                android:text="10/2"
                android:textSize="@dimen/text_datetime_mini"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/imagebutton_item_exp_setting"
                android:layout_width="@dimen/large_icon_mini"
                android:layout_height="@dimen/large_icon_mini"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"

                android:src="@drawable/circle_32p" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_item_exp_account"
            android:layout_width="@dimen/large_icon_mini"
            android:layout_height="@dimen/large_icon_mini"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/linear_contain_any_in_item_detail"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_buss_4"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
